<Window x:Class="Form.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Form"
        mc:Ignorable="d" Title="Form" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Topmost="True"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        Width="{Binding WindowWidth, Mode=TwoWay}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30"
                      CornerRadius="0"
                      GlassFrameThickness="0"
                      NonClientFrameEdges="None"
                      ResizeBorderThickness="4"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border x:Name="Size"
            CornerRadius="{Binding Thickness, Mode=TwoWay}"
            BorderBrush="Black"
            BorderThickness="0.5"
            MouseDown="Drag">
        <Border.Background>
            <SolidColorBrush Color="Black" Opacity="0.2"/>
        </Border.Background>

        <Grid>
            <TextBlock Text="{Binding WindowSize}" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="{Binding WindowSize}"/>
        </Grid>
    </Border>
</Window>
